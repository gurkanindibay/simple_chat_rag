# Copy to .env and set the following
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
PDF_PATH=./citus-doc-readthedocs-io-en-latest.pdf
PORT=8000
# Embedding provider: OPENAI or LOCAL
EMBEDDING_PROVIDER=OPENAI
# If EMBEDDING_PROVIDER=LOCAL, set a HF model id (example: sentence-transformers/all-MiniLM-L6-v2)
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DATABASE_URL=postgresql://user:password@localhost:5432/yourdb
# Table name to store vectors (pgvector)
PGVECTOR_TABLE=documents_vectors
